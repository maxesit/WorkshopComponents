  parameter loop::Real = 10
relations
  flange_a.s =  ifelse(mod(t, loop) < offset,
                  0.0,
                  ifelse(mod(t,loop)-offset > freq,
                    0.0,
                    bump*(1 - cos(2*Ï€*(t-offset)/freq))
                  )
                )
end